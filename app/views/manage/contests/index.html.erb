<div class="page-header">
<h1>比赛大类管理</h1>
  
</div>

<table class="table">
  <thead>
    <tr>
      <th><%= tmc 'name' %></th>
      <th><%= tmc 'description' %></th>
      <th><%= tmc 'Summary' %></th>
      <th><%= tmc 'level' %></th>
      <th><%= tmc 'organizer' %></th>
      <th><%= tmc 'admin' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manage_contests.each do |manage_contest| %>
      <tr>
        <td><%= manage_contest.name %></td>
        <td><%= manage_contest.description %></td>
        <td><%= manage_contest.summary %></td>
        <td><%= manage_contest.level %></td>
        <td><%= manage_contest.organizer %></td>
        <td><%= manage_contest.admin.name if manage_contest.admin %></td>
        <td><%= link_to '详情', manage_contest %></td>
        <td><%= link_to '编辑', edit_manage_contest_path(manage_contest) %></td>
        <td><%= link_to '删除', manage_contest, method: :delete, data: { confirm: '确认删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '添加新比赛', new_manage_contest_path,class:"btn btn-success" %>
