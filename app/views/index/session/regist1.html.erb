<div class="container">

  <div class="row">

    <%= form_tag login_regist_path,:class=>'form-horizontal regist-form col-md-5 col-md-offset-1'  do %>
    <%= form_errors(@index_student) %>
    <div class="regist-header col-md-12">
      <h3 class="col-md-offset-2">注册</h3>
    </div>    	
    	<div class="form-group">
        <div class="field">
          <%= label_tag :stuid ,'学号',class:"control-label col-sm-5"%>
          <div class="col-sm-7">
            <%= text_field_tag :stuid,params[:stuid], class:"form-control"%>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= label_tag :name ,'姓名',class:"control-label col-sm-5"%>
          <div class="col-sm-7">
            <%= text_field_tag :name ,params[:stuid], class:"form-control" %>
          </div>
        </div>
      </div>  
      <div class="form-group">
        <div class="field">
          <%= label_tag :pwd ,'密码',class:"control-label col-sm-5"%>
          <div class="col-sm-7">
            <%= password_field_tag :pwd ,params[:pwd], class:"form-control" %>
          </div>
        </div>
      </div>  
      <div class="form-group">
        <div class="field">
          <%= label_tag :email,'邮箱',class:"control-label col-sm-5" %>
          <div class="col-sm-7">
            <%= text_field_tag :email , params[:email], class:"form-control"%>
          </div>
        </div>
      </div>  
      <div class="form-group">
        <div class="field">
          <%= label_tag :phone ,'电话',class:"control-label col-sm-5"%>
          <div class="col-sm-7">
            <%= text_field_tag :phone , params[:phone], class:"form-control" %>
          </div>
        </div>
      </div>  
      <div class="form-group">
        <div class="field">
          <%= label_tag :grade ,'年级',class:"control-label col-sm-5"%>
          <div class="col-sm-7">
            <%= number_field :grade ,params[:grade],  class:"form-control" %>
          </div>
        </div>
      </div>  
      <div class="form-group">
        <div class="field">
          <%= label_tag :avatar,'头像',class:"control-label col-sm-5" %>
          <div class="col-sm-7">
            <%= file_field_tag :avatar%>
          </div>
        </div>
      </div>  
      <div class="form-group">
        <div class="actions">
          <%= submit_tag '注册',class:"btn btn-primary col-sm-offset-5 col-sm-7 regist-button" %>
        </div>
      </div>  
      <% end %>
    <div class="regist-help col-md-3 col-md-offset-1">
      <div class="regist-header">
        <h3>帮助</h3>        
      </div>
      <h4>注册FAQ</h4>

      <a href="/index/index" class="btn btn-info">已有帐号？返回登录</a>
    </div>
  </div>
</div>